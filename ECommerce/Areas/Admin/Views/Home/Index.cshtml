@model List<Product>

@{
    Layout = "_LayoutAdmin";
}

<div class="col-12">
    <div class="bg-card rounded h-100 p-4">
        <h6 class="mb-4">Products</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Tag</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td scope="row">@p.Id</td>
                        <td>@p.Name</td>
                        <td>@p.Category.Name</td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    Tags
                                </button>
                                <ul class="dropdown-menu">
                                    @foreach (var pt in p.ProductTags)
                                    {
                                        <li><span class="dropdown-item">@pt.Tag.Name</span></li>
                                    }
                                </ul>
                            </div>
                        </td>
                        <td>
                            <a class="btn btn-primary btn-link m-2" href="@Url.Action("EditProduct","Home",new {p.Id})">Edit</a>
                            <a class="btn btn-primary btn-link m-2" href="@Url.Action("DeleteProduct","Home",new {p.Id})">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>