@model List<Category>

@{
    Layout = "_LayoutUser";
}

<div class="col-12">
    <div class="bg-card rounded h-100 p-4">
        <h6 class="mb-4">Categories</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <th scope="row">@c.Id</th>
                        <td>@c.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>